<!--slider sec strat-->
<section id="slider-sec" class="slider-sec parallax" style="background: url('/book-shop/img/banner1.2.jpg');">
</section>
<!--slider sec end-->

<!--Product Line Up Start -->
<div class="product-listing">
    <div class="container">
        <div class="row no-gutters">

            <!-- START STICKY NAV -->
            <div class="col-12 col-lg-4 order-2 order-lg-1 sticky">
                <div id="product-filter-nav" class="product-filter-nav mb-3">
                    <div class="product-category">
                        <h5 class="filter-heading  text-center text-lg-left">Category</h5>
                        <ul>
                            <li><a href="#">June </a><span>(2)</span></li>
                            <li><a href="#">July </a><span>(4)</span></li>
                            <li><a href="#">Augest </a><span>(2)</span></li>
                            <li><a href="#">March </a><span>(7)</span></li>
                            <li><a href="#">May </a><span>(9)</span></li>
                        </ul>
                    </div>

                    <form action="adminFilter" method="post">
                        <div class="product-price mt-1">
                            <h5 class="filter-heading">Search By Price</h5>
                            <div name="range" id="slider-range"></div>
                            <p class="price-num" name="value" style="color: #0b2e13;">Price: 
                                <span name="min" id="min-p"></span>  
                                <span name="max" id="max-p"></span>
                                
                                <input type="hidden" id="minPrice" name="minPrice" value="">
                                <input type="hidden" id="maxPrice" name="maxPrice" value="">
                            </p>
                        </div>
                        <button type="submit" class="btn yellow-color-green-gradient-btn mt-1">Filter</button>
                    </form>

                    <div class="product-add mt-4">
                        <div class="row no-gutters">
                            <div class="col-12">
                                <img src="/book-shop/img/advertisement.jpg" alt="images">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END STICKY NAV -->

            <!-- START PRODUCT COL 8 -->
            <div class="col-md-12 col-lg-8 order-1 order-lg-2">
                <div class="row">

                    <!-- START LISTING HEADING -->
                    <div class="col-12 product-listing-heading">
                        <a class="btn yellow-color-green-gradient-btn mt-1 d-flex float-right" href="/admin/add">ADD BOOK</a>
                        <h1 class="heading text-left">Product Listing</h1>
                        <p class="para_text text-left">Lorem ipsum dolor sit amet, consectetur adipiscing elit. tellus lacus faucibus lectus, sed cursused eros ligula non odio.</p>
                    </div>
                    <!-- END LISTING HEADING -->

                    <!-- START PRODUCT LISTING SECTION -->
                    <div class="col-12 product-listing-products">

                        <!-- START DISPLAY PRODUCT -->
                        <div class="product-list row">
                            {{#each this.proList}}
                                <div class="col-12 col-md-6 col-lg-4 manage-color-hover wow slideInUp" data-wow-delay=".2s">
                                    <div class="product-item owl-theme product-listing-carousel owl-carousel">
                                        <div class="item p-item-img">
                                            <img src="/imgProducts/{{SKU}}.jpg" alt="images">
                                            <div class="text-center d-flex justify-content-center align-items-center">
                                                <a class="listing-cart-icon" href="/admin/edit?SKU={{SKU}}">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="p-item-detail mt-4">
                                        <h4 class="text-center p-item-name"><a href="/admin/edit?SKU={{SKU}}">{{title}}</a></h4>
                                        <p class="text-center p-item-price">${{sellPrice}}</p>
                                    </div>
                                </div>
                            {{/each}}

                        </div>
                        <!-- END DISPLAY PRODUCT -->


                    </div>
                    <!-- END PRODUCT LISTING SECTION -->
                </div>
            </div>
            <!-- END PRODUCT COL 8 -->

        </div>
    </div>
</div>
<!--Product Line Up End-->

