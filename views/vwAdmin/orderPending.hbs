{{#section 'css'}}
    <!-- Favicon -->
    <link rel="icon" href="/book-shop/img/logo.png">
    <!-- Bundle -->
    <link rel="stylesheet" href="/css/bundle.min.css">
    <!-- Plugin Css -->
    <link rel="stylesheet" href="/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/swiper.min.css">
    <link rel="stylesheet" href="/css/cubeportfolio.min.css">
    <link rel="stylesheet" href="/css/wow.css">
    <link rel="stylesheet" href="/css/LineIcons.min.css">
    <!-- Mega Menu  -->
    <link rel="stylesheet" href="/css/megamenu.css">
    <!-- StyleSheet  -->
    <link rel="stylesheet" href="/book-shop/css/style.css">
    <!-- Custom Css  -->
    <link rel="stylesheet" href="/book-shop/css/custom.css">

    {{!-- Font awesome Bootstrap --}}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"/>
{{/section}}

    <!--slider sec strat-->
    <section id="slider-sec" class="slider-sec parallax" style="background: url('/book-shop/img/banner1.4.jpg');">
    </section>
    <!--slider sec end-->

    <div class="shop-cart wow slideInUp" data-wow-duration="2s">
        <div class="container">
            {{#if this.itemExist}}
                {{!-- <b style="font-size: 120%;">No Item in Your Cart</b>
                <div class="col-6 text-left text-center">
                    <a class="btn green-color-yellow-gradient-btn w-50 py-3" href="/custom/products">GO SHOPPING</a>
                </div> --}}

                <div class="row pt-5">
                    <div class="col-12 col-md-12  cart_table wow fadeInUp animated" data-wow-delay="300ms" style="visibility: visible; animation-delay: 300ms; animation-name: fadeInUp;">
                        <div class="table-responsive">
                            <table class="table table-bordered border-radius">
                                <thead>
                                <tr>
                                    <th class="darkcolor">Product</th>
                                    <th class="darkcolor">SKU</th>
                                    <th class="darkcolor">Date</th>
                                    <th class="darkcolor">Quantity</th>
                                    <th class="darkcolor">Total</th>
                                    <th class="darkcolor">Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-lg-12 wow slideInRight" data-wow-duration="2s">
                        <div class="card-total">
                            <p style="font-size: 180%;" class="text-center"><b><i>No Item in Pending List</i></b></p>
                            <div class="col-12 text-left text-center">
                                <a class="btn green-color-yellow-gradient-btn w-50 py-3" href="/custom/products">GO SHOPPING <i class="fa fa-cart-arrow-down" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <!-- START SHOP CART TABLE -->
                <div class="row pt-5">
                    <form method="post">
                    <div class="col-12 col-md-12  cart_table wow fadeInUp animated" data-wow-delay="300ms" style="visibility: visible; animation-delay: 300ms; animation-name: fadeInUp;">
                        <div class="table-responsive">
                            <table class="table table-bordered border-radius">
                                <thead>
                                <tr>
                                    <th class="darkcolor text-center">#</th>
                                    <th class="darkcolor text-center">Username</th>
                                    <th class="darkcolor text-center">Product</th>
                                    <th class="darkcolor text-center">Date</th>
                                    <th class="darkcolor text-center">Quantity</th>
                                    <th class="darkcolor text-center">Unit Price</th>
                                    <th class="darkcolor text-center">Total</th>
                                    <th class="darkcolor text-center">&nbsp;</th>
                                </tr>
                                </thead>
                                    <tbody>
                                        {{#each this.pendingList}}
                                            <tr>
                                                <td>
                                                    {{transId}}
                                                </td>
                                                <td>
                                                    {{username}}
                                                </td>
                                                <td>
                                                    <div class="d-table product-detail-cart w-100">

                                                        <div class="">
                                                            <div class="row no-gutters">

                                                                <div class="col-12 col-lg-2 product-detail-cart-image">
                                                                <a class="shopping-product" href="#"><img src="/imgProducts/{{SKU}}.jpg" alt="Generic placeholder image"></a>
                                                                </div>

                                                                <div class="col-12 col-lg-10 mt-auto product-detail-cart-data">
                                                                    <div class="media-body ml-lg-3">
                                                                        <h4 class="product-name"><a href="/custom/detail?SKU={{SKU}}">{{book}}</a></h4>
                                                                        <h6 class="text-center font-weight-bold">SKU: {{SKU}}</h6>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <h5 style="font-size: 80%;" class="text-center amount">{{time}}</h5>
                                                </td>
                                                <td class="text-center">
                                                    <div class="quote text-center mt-1">
                                                        <h4 class="text-center font-italic amount">{{quantity}}</h4>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <div class="quote text-center mt-1">
                                                        <h4 class="text-center font-italic amount">{{sellPrice}}</h4>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <div class="quote text-center mt-1">
                                                        <h4 class="text-center font-italic amount">{{totalPrice}}</h4>
                                                    </div>
                                                </td>
                                                <td align="right" style="width: 50px;">
                                                    <input type="checkbox" class="form-check-input" name="transId" id="" value="{{transId}}">
                                                </td>
                                            </tr>
                                        {{/each}}
                                    </tbody>
                            </table>
                            <div>
                                <div class="my-4 d-flex justify-content-end">
                                    <input formaction="/admin/pending?f=accept" type="submit" class="mx-4 text-center btn green-color-yellow-gradient-btn" value="Accept">
                                    <input formaction="/admin/pending?f=cancel" type="submit" class="mx-4 text-center btn green-color-yellow-gradient-btn" value="Cancel">
                                    <input formaction="/admin/pending?f=all" type="submit" class="mx-4 text-center btn green-color-yellow-gradient-btn w-25" value="Accept All">
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
                </div>
            {{/if}}
            <!-- END SHOP CART TABLE -->

            <!-- START SHOP CART CHECKOUT FORM -->
            
            <!-- END SHOP CART CHECKOUT FORM -->

        </div>
    </div>

